<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
"http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
    <listener>
        <listener-class>com.$domain_name$.$product_name$.$name$.boot.Initializer</listener-class>
    </listener>
    <servlet>
        <servlet-name>$servlet_name$</servlet-name>
        <servlet-class>com.$domain_name$.$product_name$.$name$.$servlet_name$</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>$servlet_name$</servlet-name>
        <url-pattern>/$name$/*</url-pattern>
    </servlet-mapping>   
</web-app>
